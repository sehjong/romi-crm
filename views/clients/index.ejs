<%- include('../partials/header', { title: "All Clients" }) %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Client List</h2>
        <a href="/clients/new-client" class="btn btn-primary">Add New Client</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% clients.forEach(client => { %>
                <tr>
                    <td><%= client.fullName %></td>
                    <td><%= client.contactEmail %></td>
                    <td><%= client.contactNumber %></td>
                    <td><%= client.physicalAddress %></td>
                    <td><%= client.createdAt.toDateString() %></td>
                    <td>
                        <a href="/clients/<%= client._id %>" class="btn btn-sm btn-info">View</a>
                        <a href="/clients/<%= client._id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
                        <form action="/clients/<%= client._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>
