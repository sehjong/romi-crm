<%- include('../partials/header', { title: "All Sales" }) %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Sales List</h2>
        <a href="/sales/new-sale" class="btn btn-success">Add New Sale</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Client</th>
                <th>Title</th>
                <th>Amount</th>
                <th>Stage</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% sales.forEach(sale => { %>
                <tr>
                    <td><%= sale.client.fullName %></td>
                    <td><%= sale.title %></td>
                    <td>$<%= sale.amount.toLocaleString() %></td>
                    <td><%= sale.stage %></td>
                    <td><%= sale.createdAt.toDateString() %></td>
                    <td>
                        <a href="/sales/<%= sale._id %>" class="btn btn-sm btn-info">View</a>
                        <a href="/sales/<%= sale._id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
                        <form action="/sales/<%= sale._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>